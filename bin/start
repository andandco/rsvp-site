#!/usr/bin/env bash


docker run --name=postgres -e POSTGRES_PASSWORD=rsvp_site -e POSTGRES_USER=rsvp_site -d postgres:9.6
docker run -d -w /app --link postgres:postgres --env-file app.env --name rsvp -p 80:3000 tippenein/rsvp-site /bin/bash -c 'PGHOST=$POSTGRES_PORT_5432_TCP_ADDR PGPASS=$POSTGRES_ENV_POSTGRES_PASSWORD /usr/local/bin/rsvp-site'
